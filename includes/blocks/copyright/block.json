{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "shc/copyright",
	"version": "0.9.0",
	"title": "Copyright",
	"category": "theme",
	"keywords": [ "copyright" ],
	"description": "Output copyright statement, with years.",
	"textdomain": "shc-copyright",
	"attributes": {
		"launchYear": {
	  		"type": "integer",
	  		"default": 0
		},
		"copyrightStatement": {
			"type": "string",
			"source": "html",
			"selector": ".copyright-statement",
			"default": ""
		},
	    "align": {
			"type": "string",
			"enum": [ "", "left", "center", "right" ],
			"default": ""
	    }
	},
	"supports": {
		"className": true,
		"customClassName": true,
		"html": false,
		"color": {
			"background": true,
			"gradients": true,
			"link": true,
			"text": true
		},
		"spacing": {
			"margin": true,
			"padding": true
		},
		"typography": {
			"fontSize": true,
			"lineHeight": true,
			"__experimentalFontFamily": true,
			"__experimentalFontStyle": true,
			"__experimentalFontWeight": true,
			"__experimentalLetterSpacing": true,
			"__experimentalTextDecoration": true,
			"__experimentalTextTransform": true,
			"__experimentalDefaultControls": {
				"fontSize": true
			}
		}
	},
	"example": {
		"attributes": {
			"launchYear": 2020,
			"copyrightStatement": "<p>Acme Widgets.</p><p>All rights reserved.</p>",
			"align": "center"
		}
	},
	"editorScript": "file:./copyright.js",
	"style": [ "file:./style.css", "wp-block-library" ],
	"render": "file:./render.php"
}
